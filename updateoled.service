[Unit]
Description=Update OLED Display
After=network.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/usr/local/raspi-status
Environment=PYTHONUNBUFFERED=1
ExecStart=/usr/local/raspi-status/venv/bin/python /usr/local/raspi-status/updateoled.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
